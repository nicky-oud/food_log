<h1>My meals</h1>

<!-- <button type="button" class="btn btn-default"><%= link_to 'New Meal', new_meal_path %></button> -->

<div type="button" class="btn btn-default"><%= link_to 'New Meal', new_meal_path %></div>

<h4>You've got <%= pluralize(@meals.size, 'meal')%> logged!</h4>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Date</th>
      <th>Meal</th>
    </tr>
  </thead>

  <tbody>
    <% @meals.each do |meal| %>
      <tr class="<%= cycle('odd','even')%>">
        <td><%= meal.created_at.strftime("%b %d, %Y") %></td>
        <!-- <td><%= link_to image_tag(meal.image.url(:thumb), :class => "img-rounded")%></td> -->

        <td><%= meal.name %> <br /> <%= link_to image_tag(meal.image.url(:thumb), :class => "img-rounded"), meal %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
